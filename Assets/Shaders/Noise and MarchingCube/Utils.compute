#ifndef __UTILS_INCLUDED__
#define __UTILS_INCLUDED__ 1


bool Equals(float3 a, float3 b)
{
    return a.x == b.x && a.y == b.y && a.z == b.z;
}

bool Equals(uint3 a, uint3 b)
{
    return a.x == b.x && a.y == b.y && a.z == b.z;
}

float SqrMagnitude(int3 vec3)
{
    return vec3.x * vec3.x + vec3.y * vec3.y + vec3.z * vec3.z;
}

#endif